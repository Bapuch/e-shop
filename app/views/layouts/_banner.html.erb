<div class="container">
  <div class="header">
    <div class="logo">
      <%= link_to image_tag("logo.png", alt: ""), items_path %>
    </div>
    <div class="top-nav">
      <label class="mobile_menu" for="mobile_menu">
      <span>Menu</span>
      </label>
      <input id="mobile_menu" type="checkbox">
        <ul class="nav">
          <li class="dropdown1"><%= link_to 'ROBOTS', '#' %>
            <ul class="dropdown2">
              <li><%= link_to 'MENAGERS', '#' %></li>
              <li><%= link_to 'GUERRIERS', '#' %></li>
              <li><%= link_to 'COMPAGNIE', '#' %></li>
            </ul>
          </li>

          <% unless user_signed_in? %>
            <li><button class="btn btn-warning btn-lg modal-btn">Sign In/Register</button></li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn-logout" %>
            </li>
            <li class="nav-item">
              <%= link_to "#{current_user.email}", users_show_path %>
            </li>
            <% if current_user.is_admin? %>
              <li>
                <%= link_to "Dashboard", rails_admin_path, class: "btn btn-primary" %>
              </li>
            <% end %>
          <% end %>
          <li>
            <%= link_to image_tag("cart.png", :alt => ""), cart_path, class: "shop" %>
          </li>
        </ul>
      </div>
    <div class="clearfix"></div>
  </div>
</div>
